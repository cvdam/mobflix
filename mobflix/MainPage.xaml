<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobflix.MainPage">

    <Grid >
        <ScrollView BackgroundColor="Black">

            <VerticalStackLayout>

                <!--Aplication name-->
                <Label
                    Text="MOBFLIX"
                    TextColor="#2478DF"
                    SemanticProperties.HeadingLevel="Level1"
                    FontSize="32"
                    HorizontalTextAlignment="Center"
                    FontFamily="BebasNeueRegular" />

                <!--main screen highlight-->
                <Grid>
                    <StackLayout Margin="0,10,0,0">
                        <Image Source="banner.png" Aspect="Fill" />
                    </StackLayout>
                    <StackLayout VerticalOptions="End">
                        <Button 
                            Text="Assista Agora" 
                            CornerRadius="8" 
                            FontFamily="Roboto"
                            FontSize="15"
                            WidthRequest="128"
                            HeightRequest="42"
                            Margin="0, 0, 0, 10"
                            BackgroundColor="#2478DF" />
                    </StackLayout>
                </Grid>

                <!--Category list-->
                <Grid>
                    <ScrollView Orientation="Horizontal">
                        <HorizontalStackLayout>
                            <CollectionView x:Name="CategoryList" ItemsSource="{Binding categories}" ItemsLayout="HorizontalList" >
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Button 
                                            Text="{Binding Name}" 
                                            CornerRadius="12" 
                                            FontFamily="Roboto"
                                            FontSize="16"
                                            WidthRequest="128"
                                            HeightRequest="37"
                                            Margin="20, 20, 0, 0"
                                            Padding="0,0,0,0"
                                            BackgroundColor="{Binding ButtonColor}" />
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </HorizontalStackLayout>
                    </ScrollView>
                </Grid>

                <!--Videos presentation -->
                <CollectionView x:Name="VideoList" ItemsSource="{Binding videos}" >
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <StackLayout>
                                    <Button 
                                        Text="{Binding Category}" 
                                        CornerRadius="12" 
                                        FontFamily="Roboto"
                                        FontSize="16"
                                        WidthRequest="128"
                                        HeightRequest="37"
                                        Margin="20, 20, 0, 20"
                                        Padding="0,0,0,0"
                                        HorizontalOptions="Start"
                                        BackgroundColor="{Binding ButtonColor}" />

                                    <Image Source="{Binding Url}" />
                                </StackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!--Add Video button-->
        <VerticalStackLayout HorizontalOptions="End"
                            VerticalOptions="End"
                            Padding="10"
                            Margin="0, 0, 30, 30" >

            <Button x:Name="AddVideo"   
                Text="+"
                FontFamily="Regular"
                FontSize="Title"
                HeightRequest="52"
                WidthRequest="52"
                CornerRadius="52"   
                Clicked="AddVideo_Clicked"
                BackgroundColor="#7B61FF" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
